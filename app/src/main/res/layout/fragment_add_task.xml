<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    <variable
        name="viewModel"
        type="com.example.sampletodo.addedittask.AddEditTaskViewModel" />

        <import type="android.view.View"/>

        <import type="android.widget.CompoundButton"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/task_il"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="@dimen/card_default_padding"
            android:hint="@string/task_name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/task_tiet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@={viewModel.taskName}"
                android:singleLine="true"
                android:imeOptions="actionDone"/>

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/task_il"
            android:layout_margin="16dp"
            app:layout_constraintEnd_toEndOf="parent">

            <CheckBox
                android:id="@+id/isComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="@{viewModel.taskChecked}"
                android:onClick="@{(view) -> viewModel.setCheckBox(((CompoundButton)view).isChecked())}"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/isCompleted"
                android:textSize="@dimen/text_size_small"
                style="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                />

        </LinearLayout>



        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/card_default_padding"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="@dimen/fab_default_margin"
            android:contentDescription="@string/add_task"
            android:src="@drawable/ic_baseline_check_24"
            android:onClick="@{() -> viewModel.addTask()}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>