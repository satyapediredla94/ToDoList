<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/taskFragment">

    <fragment
        android:id="@+id/taskFragment"
        android:name="com.example.sampletodo.task.TaskFragment"
        android:label="To Do List"
        tools:context = "com.example.sampletodo.task.TaskFragment">
        <action
            android:id="@+id/action_taskFragment_to_addEditTaskFragment"
            app:destination="@id/addEditTaskFragment">
            <argument
                android:name="taskName"
                app:argType="string"
                android:defaultValue=""/>
        </action>
    </fragment>
    <fragment
        android:id="@+id/addEditTaskFragment"
        android:name="com.example.sampletodo.addedittask.AddEditTaskFragment"
        android:label="@string/add_task">
        <action
            android:id="@+id/action_addEditTaskFragment_to_taskFragment"
            app:destination="@id/taskFragment" />
    </fragment>
</navigation>